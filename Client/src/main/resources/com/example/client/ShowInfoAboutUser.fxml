<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="windowControllers.users.ShowInfoAboutUser">
   <children>
      <Pane prefHeight="82.0" prefWidth="600.0" style="-fx-background-color: #355326;">
         <children>
            <Label layoutX="172.0" layoutY="22.0" text="User information" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="33.0" />
               </font>
            </Label>
            <Button fx:id="backButton" layoutX="26.0" layoutY="24.0" mnemonicParsing="false" onAction="#onBackButtonClick" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" text="Back" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="20.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <VBox layoutX="66.0" layoutY="98.0" prefHeight="296.0" prefWidth="474.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="490.0" spacing="10.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="421.0" spacing="10.0">
                     <children>
                        <Label text="Login:" textFill="#b39d96">
                           <font>
                              <Font name="Comic Sans MS" size="25.0" />
                           </font>
                        </Label>
                        <Label fx:id="loginLabel" layoutX="206.0" layoutY="12.0" text="login" textFill="#b39d96">
                           <font>
                              <Font name="Comic Sans MS" size="25.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <Separator prefWidth="200.0" />
                  <VBox alignment="TOP_CENTER" prefHeight="131.0" prefWidth="474.0">
                     <children>
                        <Label text="Role:" textFill="#b39d96">
                           <font>
                              <Font name="Comic Sans MS" size="25.0" />
                           </font>
                        </Label>
                        <RadioButton fx:id="userRadio" mnemonicParsing="false" onAction="#onRoleToggle" text="user" textFill="#b39d96" toggleGroup="$role">
                           <font>
                              <Font name="Comic Sans MS" size="15.0" />
                           </font>
                           <toggleGroup>
                              <ToggleGroup fx:id="role" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="contentRadio" layoutX="184.0" layoutY="46.0" mnemonicParsing="false" onAction="#onRoleToggle" text="content manager" textFill="#b39d96" toggleGroup="$role">
                           <font>
                              <Font name="Comic Sans MS" size="15.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="seanceRadio" layoutX="164.0" layoutY="68.0" mnemonicParsing="false" onAction="#onRoleToggle" text="showing manager" textFill="#b39d96" toggleGroup="$role">
                           <font>
                              <Font name="Comic Sans MS" size="15.0" />
                           </font>
                        </RadioButton>
                        <RadioButton fx:id="adminRadio" layoutX="168.0" layoutY="90.0" mnemonicParsing="false" onAction="#onRoleToggle" text="administrator" textFill="#b39d96" toggleGroup="$role">
                           <font>
                              <Font name="Comic Sans MS" size="15.0" />
                           </font>
                        </RadioButton>
                     </children>
                  </VBox>
                  <Separator layoutX="10.0" layoutY="60.0" prefWidth="200.0" />
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="421.0" spacing="10.0">
                     <children>
                        <Label text="Status:" textFill="#b39d96">
                           <font>
                              <Font name="Comic Sans MS" size="25.0" />
                           </font>
                        </Label>
                        <Label fx:id="statusLabel" layoutX="206.0" layoutY="12.0" text="blocked" textFill="#b39d96">
                           <font>
                              <Font name="Comic Sans MS" size="25.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" layoutX="10.0" layoutY="216.0" prefHeight="40.0" prefWidth="421.0" spacing="10.0">
                     <children>
                        <Button fx:id="unbanButton" mnemonicParsing="false" onAction="#onUnbanClick" prefHeight="32.0" prefWidth="142.0" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" text="unblock" textFill="WHITE">
                           <font>
                              <Font name="Comic Sans MS" size="15.0" />
                           </font>
                        </Button>
                        <Button fx:id="banButton" layoutX="176.0" layoutY="10.0" mnemonicParsing="false" onAction="#onBanClick" prefHeight="32.0" prefWidth="142.0" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" text="block" textFill="WHITE">
                           <font>
                              <Font name="Comic Sans MS" size="15.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <Button fx:id="updateButton" layoutX="186.0" layoutY="416.0" mnemonicParsing="false" onAction="#onUpdateClick" prefHeight="42.0" prefWidth="229.0" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" text="Update" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Button>
      <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="38.0" layoutY="458.0" prefHeight="36.0" prefWidth="530.0" text="сообщение" textFill="RED" visible="false">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
