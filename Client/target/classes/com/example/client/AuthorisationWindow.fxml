<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F9F8F6;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="windowControllers.AuthorisationWindow">
   <children>
      <TextField fx:id="loginField" layoutX="129.0" layoutY="100.0" promptText="Login">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passField" layoutX="129.0" layoutY="174.0" promptText="Password">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </PasswordField>
      <Label layoutX="276.0" layoutY="329.0" text="Do not have an account?" textFill="#b39d96">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
      </Label>
      <Button fx:id="buttonLogin" layoutX="249.0" layoutY="247.0" mnemonicParsing="false" onAction="#onLoginButtonClick" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" styleClass="defaultButtonClass" text="Log in" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </Button>
      <Button fx:id="buttonRegister" layoutX="458.0" layoutY="324.0" mnemonicParsing="false" onAction="#onRegisterButtonClick" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" text="Register" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
      </Button>
      <ImageView fitHeight="156.0" fitWidth="188.0" layoutX="16.0" layoutY="236.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/movieReel.png" />
         </image>
      </ImageView>
      <Pane prefHeight="82.0" prefWidth="600.0" style="-fx-background-color: #355326;">
         <children>
            <Label layoutX="195.0" layoutY="18.0" text="Authorisation" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="33.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Label fx:id="messageLabel" layoutX="198.0" layoutY="356.0" prefHeight="28.0" prefWidth="376.0" text="Плейсхолдер" visible="false">
         <font>
            <Font name="Comic Sans MS" size="10.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
