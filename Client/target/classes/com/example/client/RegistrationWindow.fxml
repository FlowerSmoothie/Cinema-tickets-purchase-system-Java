<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="418.0" prefWidth="600.0" style="-fx-background-color: #F9F8F6;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="windowControllers.RegistrationWindow">
   <children>
      <Pane prefHeight="82.0" prefWidth="600.0" style="-fx-background-color: #355326;">
         <children>
            <Label layoutX="205.0" layoutY="18.0" text="Registration" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="33.0" />
               </font>
            </Label>
            <Button fx:id="backButton" layoutX="29.0" layoutY="20.0" mnemonicParsing="false" onAction="#onBackButtonClick" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" text="Back" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="20.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <TextField fx:id="loginField" layoutX="143.0" layoutY="101.0" promptText="Login">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passField" layoutX="143.0" layoutY="174.0" promptText="Password">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </PasswordField>
      <PasswordField fx:id="confirmPassField" layoutX="143.0" layoutY="248.0" promptText="Repeat password">
         <font>
            <Font name="Comic Sans MS" size="25.0" />
         </font>
      </PasswordField>
      <ImageView fitHeight="182.0" fitWidth="184.0" layoutX="-19.0" layoutY="226.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/popcorn.png" />
         </image>
      </ImageView>
      <Button fx:id="registerButton" layoutX="203.0" layoutY="322.0" mnemonicParsing="false" onAction="#onRegisterButtonClick" prefHeight="42.0" prefWidth="223.0" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" text="Register" textFill="WHITE">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Button>
      <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="138.0" layoutY="378.0" prefHeight="28.0" prefWidth="387.0" text="сообщение" textFill="RED" visible="false">
         <font>
            <Font name="Comic Sans MS" size="10.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
