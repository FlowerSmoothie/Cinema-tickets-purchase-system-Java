<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="645.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="windowControllers.reviews.ShowReviewList">
   <children>
      <Pane prefHeight="82.0" prefWidth="600.0" style="-fx-background-color: #355326;">
         <children>
            <Label layoutX="218.0" layoutY="22.0" text="Review list" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="33.0" />
               </font>
            </Label>
            <Button fx:id="backButton" layoutX="26.0" layoutY="24.0" mnemonicParsing="false" onAction="#onBackButtonClick" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" text="Back" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="20.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <VBox alignment="CENTER" layoutX="180.0" layoutY="498.0" prefHeight="133.0" prefWidth="241.0" spacing="10.0">
         <children>
            <Button fx:id="openButton" disable="true" mnemonicParsing="false" onAction="#onOpenButtonClick" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" styleClass="defaultButtonClass" text="Open the review" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="25.0" />
               </font>
            </Button>
            <Button fx:id="writeButton" disable="true" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onWriteButtonClick" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" styleClass="defaultButtonClass" text="Create a review" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="25.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" layoutX="181.0" layoutY="98.0" prefHeight="140.0" prefWidth="241.0" spacing="10.0">
         <children>
            <Label text="Movie:" textFill="#b39d96">
               <font>
                  <Font name="Comic Sans MS" size="25.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="moviesCombo" prefHeight="27.0" prefWidth="241.0" />
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearchButtonClick" style="-fx-background-color: #7C9982; -fx-background-radius: 0;" styleClass="defaultButtonClass" text="Search" textFill="WHITE">
               <font>
                  <Font name="Comic Sans MS" size="25.0" />
               </font>
            </Button>
         </children>
      </VBox>
      <ListView fx:id="reviewsList" layoutX="91.0" layoutY="251.0" prefHeight="239.0" prefWidth="418.0" />
   </children>
</AnchorPane>
